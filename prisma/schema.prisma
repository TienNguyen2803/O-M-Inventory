  address     String
  country     String
  type        String
  paymentTerm String
  currency    String
  status      String   @default("Active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  contacts SupplierContact[]

  @@map("suppliers")
}

