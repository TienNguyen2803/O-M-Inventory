model Material {
  id             String   @id @default(uuid())
  name           String
  nameEn         String?
  code           String   @unique
  evnCode        String?
  partNo         String
  serialNumber   String?
  managementType String   // Batch | Serial
  category       String
  unit           String
  status         String
  description    String?
  stock          Int      @default(0)
  manufacturer   String?
  origin         String?
  minStock       Int?
  maxStock       Int?
  technicalSpecs Json?
  location       String?
  stockAge       String?
  supplierWarranty String?
  serviceWarranty  String?
  chassisPn      String?
  chassisSn      String?
  originAsPerCustomer String?
  originOnDocs   String?
  warrantyCount  Int?
  lifespan       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("materials")
}

model Supplier {
  id          String   @id @default(uuid())
